    <style>
        ::-webkit-scrollbar {
            width: 5px;
            height: 10px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            border-radius: 100vh;
            background: #edf2f7;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #ffb300;
            border-radius: 100vh;
            border: 2px solid #ffb300;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #ffb300;
        }
        .visbile-hidden {
            visibility: hidden;
        }
    </style>
</head>

<body class="bg-gray-800 " >
    <div id="body-container" class="mx-auto p-4 text-orange-200 min-h-screen visbile-hidden">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 md:min-h-[95vh]">
            <!-- Left small column -->
            <div class="hidden md:block md:col-span-1 p-4 md:order-1 relative border-solid  border-r-2">
                <div class="">
                    <img src="https://avatars.githubusercontent.com/u/24489453?v=4">
                </div>
                <div class="pt-5">
                    <p>Hi im wisnshaftler. <span>This is my portfolio and blog.</span></p>
                    <br>
                    <a href="https://www.linkedin.com/in/hasala-d/" class="text-orange-500 text-2xl " target="_blank" title="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="https://github.com/wisnshaftler" class="text-orange-500 text-2xl ml-5" target="_blank" title="GitHub">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
            </div>

            <!-- Middle large column -->
            <!-- Spanning two columns in the middle on medium screens -->
            <div class="md:col-span-2 p-4 md:order-2 overflow-y-scroll scrollbar-thin">
                <h3 class="md:block width-[100%] text-center underline text-2x1">POSTS</h3>
                <%- post_body %>
            </div>

            <!-- Right small column -->
            <!-- Placed in the last column on medium screens -->
            <div class="md:col-span-1 p-4 md:order-3">
                Something will be here (if i got idea)
            </div>

            <div class="md:hidden md:col-span-1 p-4 md:order-1 relative border-solid  border-r-2">
                <div class="">
                    <img src="https://avatars.githubusercontent.com/u/24489453?v=4">
                </div>
                <div class="pt-5">
                    <p>Hi im wisnshaftler. <span>This is my portfolio and blog.</span></p>
                    <br>
                    <a href="https://www.linkedin.com/in/hasala-d/" class="text-orange-500 text-2xl " target="_blank" title="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="https://github.com/wisnshaftler" class="text-orange-500 text-2xl ml-5" target="_blank" title="GitHub">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        window.addEventListener("load", function() {
            document.getElementById("body-container").classList.remove("visbile-hidden");
        })
    </script>
</body>

